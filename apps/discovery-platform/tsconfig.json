{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*", "../../packages/shared/src/*"],
      "@/shared/*": ["./shared/*"],
      "@/lib/*": ["../../packages/shared/src/lib/*"],
      "@/components/*": ["../../packages/shared/src/components/*"],
      "@/hooks/*": ["../../packages/shared/src/hooks/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
